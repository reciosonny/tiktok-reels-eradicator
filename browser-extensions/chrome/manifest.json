{
    "name": "Tiktok eradicator",
    "description": "Get rid of Tiktok's 'For You' page and focus on what you do most",
    "version": "1",
    "manifest_version": 3,
    "icons": {
        "128": "./images/default.png",
        "19": "./images/default.png"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://www.tiktok.com/*", "*://tiktok.com/*"],
            "js": ["./dist/index.js"],
            "css": ["./dist/index.css"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_icons": {
            "128": "./images/default.png"
        }
    },
    "options_page": "options.html",
    "permissions": ["activeTab", "scripting", "storage", "tabs", "tabGroups"],
    "host_permissions": ["*://www.tiktok.com/*", "*://tiktok.com/*"]
}
